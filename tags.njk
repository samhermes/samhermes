---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - projects
    - tagList
permalink: /category/{{ tag | slug }}/
eleventyComputed:
  title: "{{ tag }}"
layout: default
---
<div class="contain">
  <header class="page-header"><h1 class="page-title">Category: {{ tag }}</h1></header>
  
  <ul class="post-list">
    {% set taglist = collections[ tag ] %}
    {% for post in taglist | reverse %}
			<li>
				<p class="post-meta">{{ post.date | readableDate }}</p>
				<h3 class="post-title">
					<a class="post-link" href="{{ post.url | url }}">{{ post.data.title }}</a>
				</h3>
			</li>
	  {% endfor %}
  </ul>
</div>

