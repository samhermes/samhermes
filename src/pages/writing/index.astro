---
import SiteLayout from "../../layouts/SiteLayout.astro";
import { getCollection } from "astro:content";
import Series from "../../components/Series.astro";
const series = (await getCollection("series"))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<SiteLayout title="Writing">
  <div class="page-container">
    <header class="page-header">
      <h1 class="page-title">Writing</h1>
    </header>

    <div class="page-content-contain">
      <div class="writing-contain">
        <h2>Series</h2>
        <ul class="series-list" role="list">
          {series.map((seriesItem) => <Series series={seriesItem.data} />)}
        </ul>
      </div>
    </div>
  </div>
</SiteLayout>
