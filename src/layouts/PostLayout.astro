---
import SiteLayout from "./SiteLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import TagIcon from "../img/tag.svg";
const { title, excerpt, date, tags } = Astro.props;
---

<SiteLayout title={title} excerpt={excerpt} type="post">
	<article class="post">
		<header class="post-header">
			<h1 class="post-title">{title}</h1>
			<div class="post-meta">
				<p class="post-date"><FormattedDate date={date} /></p>
				{
					tags?.length ? (
						<div class="post-meta">
							<div class="post-tags-container">
								<TagIcon />
								<ul class="post-tags" aria-label="Post Tags" role="list">
									{tags.map((tag) => (
										<li>
											<a href={`/category/${tag.replace(/\s+/g, '-').toLowerCase()}`}>{tag}</a>
										</li>
									))}
								</ul>
							</div>
						</div>
					) : null
				}
			</div>
		</header>

		<div class="post-content">
			<slot />
		</div>
	</article>
</SiteLayout>
