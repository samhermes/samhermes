---
import { slugRewrite } from "../utils/slugRewrite";
import FormattedDate from "./FormattedDate.astro";
const { post } = Astro.props;
---

<li>
  <h3 class="post-title">
    <a class="post-link" href={`/posts/${slugRewrite(post).slug}`}>
      {post.data.title}
    </a>
  </h3>
  <div class="post-meta">
    <p class="post-date">
      <FormattedDate date={post.data.date} />
    </p>
    {
      post.data.tags?.length ? (
        <div class="post-tags-container">
          <svg width="16" height="16"><use xlink:href="#tag"></use></svg>
          <ul class="post-tags" aria-label="Post Tags" role="list">
            {post.data.tags.map((tag) => (
              <li>
                <a href={`/category/${tag.replace(/\s+/g, '-').toLowerCase()}`}>{tag}</a>
              </li>
            ))}
          </ul>
        </div>
      ) : null
    }
  </div>
</li>
