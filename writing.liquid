---
title: Writing
layout: default
---

<div class="page-container">
	<header class="page-header">
		<h1 class="page-title">{{ title }}</h1>
	</header>

	<div class="page-content-contain">
		{% for story in collections.writing %}
			{% assign currentyear = story.date | date: "%Y" %}
			{% if forloop.first %}
				{% assign lastyear = currentyear %}
				<div class="year-group">
					<h2 class="screen-reader-text" id="{{currentyear}}-ref">{{ currentyear }}</h2>
					<ul class="post-list">
			{% endif %}
			{% if currentyear != lastyear %}
					</ul>
				</div>
				<div class="year-group">
					<h2 class="posts-subheading" id="{{currentyear}}-ref">{{ currentyear }}</h2>
					<ul class="post-list">
				{% assign lastyear = currentyear %}
			{% endif %}
				<li>
					<h3 class="post-title">
						<a class="post-link" href="{{ story.url | prepend: site.baseurl }}">{{ story.data.title }}</a>
					</h3>
					<div class="post-meta">
						<p class="post-date">{{ story.date | readableDate }}</p>
					</div>
				</li>
			{% if forloop.last %}
				</ul>
				</div>
			{% endif %}
		{% endfor %}
	</div>
</div>